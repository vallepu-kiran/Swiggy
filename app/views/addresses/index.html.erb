<!-- app/views/addresses/index.html.erb -->
<h1>Your Addresses</h1>

<% if @addresses.any? %>
  <table>
    <thead>
      <tr>
        <th>Location</th>
        <th>Landmark</th>
        <th>Door Number</th>
        <th>Address Type</th>
        <th>Other Address Type</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <% @addresses.each do |address| %>
        <tr>
          <td><%= address.location %></td>
          <td><%= address.landmark %></td>
          <td><%= address.door_number %></td>
          <td><%= address.address_type %></td>
          <td><%= address.other_address_type %></td>
          <td>
            <%= link_to 'Show', address %>
            <%= link_to 'Edit', edit_address_path(address) %>
            <%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No addresses found.</p>
<% end %>

<%= link_to 'New Address', new_address_path %>
