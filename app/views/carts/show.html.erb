<div class="row cart">
<div class="col-8">
</div>

<div class="c_1 col-4">
  <h1>Your Shopping Cart</h1>
  <% @cart.cart_items.each do |cart_item| %>
    <p>Item Name: <%= cart_item.item.name %></p>
    <div id="quantity-buttons-<%= cart_item.item.id %>">
      <% if @cart.cart_items.where(item_id: cart_item.item.id).exists? %>
           <%= render(:partial => 'carts/quantity_buttons', locals: { cart_item: @cart.cart_items.find_by(item_id: cart_item.item.id), item: cart_item.item }) %>
      <% else %>
      
    <% end %>
  </div>
    
  <% end %>
</div>
</div>

  